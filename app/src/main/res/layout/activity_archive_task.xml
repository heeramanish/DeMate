<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DataActivity">


    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">




            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="57dp"
                android:text="Did you know these facts about Dementia in Australia?"
                android:textColor="@color/darkblue"
                android:textSize="23dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:layout_margin="0dp"
                android:src="@drawable/stattest1" />



            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="57dp"
                android:text="Victoria has the second highest number of Dementia cases in Australia with an average of 88090 cases in a year, calculated over a ten year period (2011-2020)."
                android:textColor="@color/darkblue"
                android:textSize="18dp"

                android:textStyle="bold" />

            <com.anychart.AnyChartView
                android:id="@+id/any_chart_view1"
                android:layout_width="395dp"
                android:layout_height="300dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="57dp"
                android:text="Importance of Exercise to combat Dementia:"
                android:textColor="@color/darkblue"
                android:textSize="18dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:layout_margin="0dp"
                android:src="@drawable/exercisebenefits" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="57dp"
                android:text="As per the Department of Health guidelines, 150 minutes of activity is required for an individual to remain healthy and have strong cognitive abilites.
It was observed 80.1% did not follow these guidelines due to lack of knowledge and ability to stay physicially active."
                android:textColor="@color/darkblue"
                android:textSize="18dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:layout_margin="0dp"
                android:src="@drawable/donut" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="57dp"
                android:text="It is essential to change these statistics by staying physically active and engaging in exercises for 150 mins a week."
                android:textColor="@color/darkblue"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>



</RelativeLayout>

