<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/border_task_invidual"
    android:padding="2dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/imgcategoryicon"
            android:fontFamily="@string/font_family_condensed"
            android:text="Hello"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgcategoryicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@id/view"
            android:layout_alignParentRight="true"
            android:paddingTop="2dp"
            android:src="@drawable/health_and_medical" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/tvTaskName"
            android:layout_alignStart="@+id/tvTaskName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/lightgray" />

        <ImageView
            android:id="@+id/imgclock"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/tvTaskName"
            android:layout_marginTop="14dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_watch" />

        <TextView
            android:id="@+id/tvTaskTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTaskName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgclock"
            android:fontFamily="@string/font_family_condensed"
            android:gravity="bottom"
            android:text="09:01 PM"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imgIcondate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/tvTaskTime"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_date" />

        <TextView
            android:id="@+id/tvTaskDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTaskName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgIcondate"
            android:fontFamily="@string/font_family_condensed"
            android:gravity="bottom"
            android:text="21/11/2019"
            android:textSize="17sp" />


        <ImageButton
            android:background="#00FFFFFF"
            android:id="@+id/imgRactive"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/view"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_lock" />


        <ImageView
            android:layout_below="@id/view"
            android:id="@+id/imgIconRepeatType"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/imgRactive"
            android:scaleType="fitXY"
            android:src="@drawable/daily" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>